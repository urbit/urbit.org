import { useEffect } from 'react';
import { useRouter } from 'next/router';

export default function PrimerRedirect() {
  const router = useRouter();

  useEffect(() => {
    if (router.query.slug === undefined) {
      // If no slug is provided, redirect to overview/urbit-id
      router.push('/overview/urbit-id');
    } else {
      // Optionally handle other slugs if needed
      console.log('Handling other slugs:', router.query.slug);
    }
  }, []);

  // You can return null or some loading UI
  return null;
}

// If you're using getStaticProps or getServerSideProps, remove them here since 
// they're not necessary for this simple redirect scenario.
